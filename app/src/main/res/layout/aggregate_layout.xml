<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="110dp"
    android:id="@+id/aggregateLayoutLinear"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/translucent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/textViewArrgegateLabel"
            style="@style/TextShadow"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="DAILY"
            android:textColor="@color/colorAccentDark"
            android:textSize="10sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewMin"
            style="@style/TextShadow"
            android:layout_width="40dp"

            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="MIN"
            android:textColor="@color/colorAccentDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewMed"
            style="@style/TextShadow"
            android:layout_width="40dp"

            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="MED"
            android:textColor="@color/colorAccentDark"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textViewMax"
            style="@style/TextShadow"
            android:layout_width="40dp"

            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:text="MAX"
            android:textColor="@color/colorAccentDark"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMinVal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"
            android:textSize="12sp"
            android:gravity="center"
            android:backgroundTintMode="src_atop"
            style="@style/TextShadow"/>


        <TextView
            android:id="@+id/textViewMedVal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"
            android:textSize="12sp"
            android:gravity="center"
            android:backgroundTintMode="src_atop"
            style="@style/TextShadow"/>


        <TextView
            android:id="@+id/textViewMaxVal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"
            android:textSize="12sp"
            android:gravity="center"
            android:backgroundTintMode="src_atop"
            style="@style/TextShadow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/textViewArrgegateUnits"
            style="@style/TextShadow"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="Units"
            android:textColor="@color/colorAccentDark"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>